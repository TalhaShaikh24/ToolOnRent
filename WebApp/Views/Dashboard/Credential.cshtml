<section class="col-lg-12">

    <div class="card" style="border-radius: 20px!important">
        <div class="card-header">
            <h1 class="card-title">
                <i class="fas fa-key mr-1"></i>
                <b>Create Credential</b>
            </h1>

        </div>
        <div class="card-body">
            <form class="row">

                <div class="col-md-6">
                    <div class="form-group d-none">
                        <input type="hidden" class="form-control" id="CredentialID" value="0">
                    </div>
                    <div class="form-group">
                        <label>Tool Name</label>
                        <input type="text" readonly class="form-control" id="ToolName">
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label>Tool URL</label>
                        <input type="text" readonly class="form-control" id="ToolURL">
                    </div>
                </div>


                <div class="col-md-6">
                    <div class="form-group">
                        <label>Tool</label>
                        <select class="form-control" id="DDLToolID">

                        </select>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label>Email</label>
                        <input type="text" class="form-control" id="Email" placeholder="Enter Email">
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label>Password</label>
                        <input type="text"  class="form-control" id="Password" placeholder="Enter Password">
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label>Last 4 Digits of Card</label>
                        <input type="text" class="form-control" maxlength="4" id="CardNumber" placeholder="Enter Last 4 Digits of Card">
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label>Expiry Date</label>
                        <input type="date" class="form-control" maxlength="4" id="ExpiryDate" placeholder="Enter Expiry Date">
                    </div>
                </div>

                <div class="col-md-12">
                    <button type="button" id="Btn_Clear" class="btn btn-danger float-right btn-md ml-3">Clear</button>
                    <button type="button" id="Btn_Submit" class="btn btn-primary float-right btn-md">Submit</button>

                </div>

            </form>
        </div>
    </div>

</section>


<section class="col-lg-12">

    <div class="card" style="border-radius: 20px!important">
        <div class="card-header">
            <h1 class="card-title">
                <i class="fas fa-key mr-1"></i>
                <b>Credential Details</b>
            </h1>

        </div>
        <div class="card-body">
            <table class="table table-bordered" id="CredentialTable">
                <thead>
                    <tr>
                        <th>Tool Name</th>
                        <th>Tool URL</th>
                        <th>Email</th>
                        <th>Password</th>
                        <th>Card Number</th>
                        <th>Expiry Date</th>
                        <th>Action</th>
                    </tr>
                </thead>

                <tbody>
                </tbody>
            </table>
        </div>
    </div>

</section>

@section Scripts {

    <script src="~/dist/js/pages/Credential.js"></script>

 }             