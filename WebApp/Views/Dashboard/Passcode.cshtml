<section class="col-lg-12">

    <div class="card" style="border-radius: 20px!important">
        <div class="card-header">
            <h1 class="card-title">
                <i class="fas fa-lock mr-1"></i>
                <b>Create Passcode</b>
            </h1>

        </div>
        <div class="card-body">
            <form class="row">

                <div class="col-md-6 d-none">
                    <div class="form-group">
                        <input type="hidden" class="form-control" id="PasscodeID" value="0">
                    </div>
                </div>
                 
                
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Tool</label>
                            <select class="form-control" id="DDLToolID">
                            </select>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                        <label>Tool Credential</label>
                          <select class="form-control" id="DDLCredential">
                         </select>
                        </div>
                   </div>


                 <div class="col-md-6">
                        <div class="form-group">
                            <label>Tool URL</label>
                            <input type="text" readonly class="form-control" id="ToolURL">
                        </div>
                  </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label>IsActive</label>
                        <select class="form-control" id="DDLIsActive">
                         <option value="1">Yes</option>
                         <option value="0">No</option>
                        </select>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label>Passcode</label>
                        <div style="position:relative;">
                        <input type="text" class="form-control" maxlength="30" id="Passcode" placeholder="Enter Passcode">
                            <button type="button" onclick="GeneratePassword();" class="btn btn-primary btn-sm" style="position: absolute; top: 4px; right: 5px; ">Generate Passcode</button>
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label>Start Time</label>
                        <input type="time" class="form-control" id="StartTime" placeholder="Enter Start Time">
                    </div>
                </div>


                <div class="col-md-6">
                    <div class="form-group">
                        <label>End Time</label>
                        <input type="time" class="form-control" id="EndTime" placeholder="Enter End Time">
                    </div>
                </div>


                <div class="col-md-6">
                    <div class="form-group">
                        <label>Total Minutes</label>
                        <input type="text" class="form-control" id="TotalMinutes" placeholder="Enter Total Minutes">
                    </div>
                </div>


                <div class="col-md-6">
                    <div class="form-group">
                        <label>Expiry Date</label>
                        <input type="date" class="form-control" id="CardExpiry" placeholder="Enter Expiry Date">
                    </div>
                </div>



                <div class="col-md-6">
                    <div class="form-group">
                        <label>Assign Tool To User</label>
                        <select class="form-control" id="DDLClient">
                        </select>
                    </div>
                </div>

                <div class="col-md-12">
                    <button type="button" id="Btn_Clear" class="btn btn-danger float-right btn-md ml-3">Clear</button>
                    <button type="button" id="Btn_Submit" class="btn btn-primary float-right btn-md">Submit</button>

                </div>

            </form>
        </div>
    </div>

</section>


<section class="col-lg-12">

    <div class="card" style="border-radius: 20px!important">
        <div class="card-header">
            <h1 class="card-title">
                <i class="fas fa-lock mr-1"></i>
                <b>Passcode Details</b>
            </h1>

        </div>
        <div class="card-body">
            <div class="table-responsive">
            <table class="table table-bordered" id="PasscodeTable" style="width:100%!important;">
                <thead>
                    <tr>
                        <th>Tool Name</th>
                        <th>Client Email</th>
                        <th>Passcode</th>
                        <th>IsActive</th>
                        <th>StartTime</th>
                        <th>EndTime</th>
                        <th>TotalMinutes</th>
                        <th>UsedMinutes</th>
                        <th>Expiry Date</th>
                        <th>Action</th>
                    </tr>
                </thead>

                <tbody>
                </tbody>
            </table>
            </div>
        </div>
    </div>

</section>

@section Scripts {

    <script src="~/dist/js/pages/Passcode.js"></script>

 }             